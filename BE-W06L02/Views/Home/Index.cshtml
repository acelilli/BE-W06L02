﻿@{
    ViewBag.Title = "Home Page";
}

<main>
    <h2>Dashboard</h2>

    <div class="row py-3">
        <div class="col-md-6">
            <div class="card  bg-dark border border-secondary">
                <div class="card-body">
                    <h5 class="card-title">Spedizioni in consegna oggi</h5>
                    <p class="card-text">Numero di spedizioni: @ViewBag.SpedizioniInConsegna.Count</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card  bg-dark border border-secondary">
                <div class="card-body">
                    <h5 class="card-title">Spedizioni in attesa di consegna</h5>
                    <p class="card-text">Numero totale: @ViewBag.TotalDeliveries</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row py-3">
        <div class="col-sm-6">
            <div class="card bg-dark border border-secondary">
                <div class="card-body">
                    <h5 class="card-title">Registra cliente</h5>
                    <p class="card-text">Inserisci i dati e aggiungi  un nuovo cliente al database.</p>
                    @Html.ActionLink("Registra Cliente", "NuovoCliente", "Cliente", null, new { @class = "btn btn-outline-success" })
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card bg-dark border border-secondary">
                <div class="card-body">
                    <h5 class="card-title">Registra spedizione</h5>
                    <p class="card-text">Registra una nuova spedizione al database.</p>
                    @Html.ActionLink("Registra Spedizione", "NuovaSpedizione", "Spedizione", null, new { @class = "btn btn-outline-success" })
                </div>
            </div>
        </div>
    </div>
    <div class="row py-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body  bg-dark border border-secondary">
                    <h5 class="card-title">Spedizioni per città destinataria</h5>
                    <ul class="list-group">
                        @foreach (var item in ViewBag.DeliveriesByCity)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center text-light bg-dark border border-secondary">
                                @item.Key
                                <span class="badge badge-primary badge-pill">@item.Value</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</main>